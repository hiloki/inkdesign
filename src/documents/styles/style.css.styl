// variable
$baseColor = #1F2A33
$linkColor = #E74C3C

// Foundation
html
  text-align center
  color $baseColor

a
  color $linkColor
  text-decoration none
  &:hover
    text-decoration underline 

// Base
.brand
  font-family: 'Karla', sans-serif
  > img
    display block 
    margin 0 auto 0.3em
  
.contact
  position fixed
  left 0
  bottom 0
  right 0
  padding 1em 0 
  font-family 'Karla', sans-serif